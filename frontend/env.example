NEXT_PUBLIC_APP_NAME=Rakshaayan
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# API endpoints
NEXT_PUBLIC_API_BASE_URL=http://localhost:8001
NEXT_PUBLIC_PATIENT_API_URL=http://localhost:8002
