# Frontend Specific Configuration
# This service inherits shared variables from the main .env file

# Next.js settings
NEXT_PUBLIC_APP_NAME=Rakshaayan
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# Set this to the base URL of your backend server (IP or domain, with port)
NEXT_PUBLIC_API_BASE_URL=http://localhost:800

# All service URLs will use this as a prefix
NEXT_PUBLIC_API_AUTH_URL=${NEXT_PUBLIC_API_BASE_URL}1/
NEXT_PUBLIC_API_PATIENT_URL=${NEXT_PUBLIC_API_BASE_URL}2/
NEXT_PUBLIC_API_HOSPITAL_URL=${NEXT_PUBLIC_API_BASE_URL}3/
NEXT_PUBLIC_API_MANUFACTURER_URL=${NEXT_PUBLIC_API_BASE_URL}4/
NEXT_PUBLIC_API_GOV_URL=${NEXT_PUBLIC_API_BASE_URL}5/
NEXT_PUBLIC_API_MEDIA_URL=${NEXT_PUBLIC_API_BASE_URL}6/
NEXT_PUBLIC_API_COORDINATOR_URL=${NEXT_PUBLIC_API_BASE_URL}7/
NEXT_PUBLIC_API_AI_URL=${NEXT_PUBLIC_API_BASE_URL}0/

# Frontend-specific settings
NEXT_PUBLIC_ENABLE_VOICE_INPUT=True
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=True
NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,hi,ta,te,kn,ml

# UI settings
NEXT_PUBLIC_THEME=light
NEXT_PUBLIC_ENABLE_ANIMATIONS=True
NEXT_PUBLIC_ENABLE_ACCESSIBILITY=True

# Feature flags
NEXT_PUBLIC_ENABLE_WHATSAPP_BOT=False
NEXT_PUBLIC_ENABLE_REAL_TIME_NOTIFICATIONS=True
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=False

# Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN= 